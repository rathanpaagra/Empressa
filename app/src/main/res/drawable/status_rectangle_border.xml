    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:angle="360"
                android:centerColor="@color/gradient2"
                android:endColor="@color/gradient4"
                android:gradientRadius="25"
                android:startColor="@color/gradient1"
                />

            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#000000">

            </solid>

        </shape>
    </item>
</layer-list>
